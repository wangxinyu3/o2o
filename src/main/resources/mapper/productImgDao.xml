<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ProductImgDao">
    <insert id="batchInsertProductImg">
        INSERT INTO
        tb_product_img(img_addr, img_desc, priority, create_time, product_id)
        VALUES
        <foreach collection="list" item="productImg" index="index" separator=",">
            (
            #{productImg.imgAddr},
            #{productImg.imgDesc},
            #{productImg.priority},
            #{productImg.createTime},
            #{productImg.productId}
            )
        </foreach>
    </insert>
    <delete id="deleteProductImgByProductId"></delete>
    <select id="queryProductImgList" resultType="entity.ProductImg"></select>
</mapper>